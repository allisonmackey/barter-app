<!DOCTYPE html>
<html>
  <head>
    <title>BarterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class = "container">
      <%# NAVIGATION BAR %>
      <nav class="nav nav-pills nav-fill">
          <% if current_user %>
            <a class="nav-item nav-link" href="/users/sign_out" data-method="delete" value="<%= destroy_user_session_path%>"> Sign Out</a>
            <a class="nav-item nav-link" href="#">Signed In As: <%= current_user.email %></a>
          <% else  %>
            <a class="nav-item nav-link" href="/users/sign_up"> Sign Up </a>
            <a class="nav-item nav-link" href="/users/sign_in">Sign In </a>
          <% end %>
      </nav>

      <%# BODY %>

      <%= yield %>
    </div>
  </body>
</html>
